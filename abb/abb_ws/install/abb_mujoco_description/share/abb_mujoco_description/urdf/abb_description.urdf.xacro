<?xml version="1.0"?>
<robot name="rover" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Main body -->
  <link name="hull_link">
    <visual>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0.1 0.1 0.8 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.4 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
  </link>

  <!-- Six thruster joints (effort controlled) -->
  <!-- X, Y, Z, Roll, Pitch, Yaw -->
  <joint name="thruster_joint_1" type="continuous">
    <parent link="hull_link"/>
    <child link="thruster_link_1"/>
    <origin xyz="0.3 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <link name="thruster_link_1"/>

  <joint name="thruster_joint_2" type="continuous">
    <parent link="hull_link"/>
    <child link="thruster_link_2"/>
    <origin xyz="-0.3 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="thruster_link_2"/>

  <joint name="thruster_joint_3" type="continuous">
    <parent link="hull_link"/>
    <child link="thruster_link_3"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="thruster_link_3"/>

  <joint name="thruster_joint_4" type="continuous">
    <parent link="hull_link"/>
    <child link="thruster_link_4"/>
    <origin xyz="0 0.2 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>
  <link name="thruster_link_4"/>

  <joint name="thruster_joint_5" type="continuous">
    <parent link="hull_link"/>
    <child link="thruster_link_5"/>
    <origin xyz="0 -0.2 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <link name="thruster_link_5"/>

  <joint name="thruster_joint_6" type="continuous">
    <parent link="hull_link"/>
    <child link="thruster_link_6"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="thruster_link_6"/>

  <!-- ros2_control tag for hardware interface -->
  <ros2_control name="abb_control" type="system">
    <hardware>
      <plugin>abb_simulator_layer/AbbSimulatorInterface</plugin>
    </hardware>
    <joint name="thruster_joint_1">
      <command_interface name="effort"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="thruster_joint_2">
      <command_interface name="effort"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="thruster_joint_3">
      <command_interface name="effort"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="thruster_joint_4">
      <command_interface name="effort"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="thruster_joint_5">
      <command_interface name="effort"/>
      <state_interface name="effort"/>
    </joint>
    <joint name="thruster_joint_6">
      <command_interface name="effort"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

</robot>