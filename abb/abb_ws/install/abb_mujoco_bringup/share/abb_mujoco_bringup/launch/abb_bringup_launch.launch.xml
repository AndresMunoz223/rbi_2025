<launch>
    <let name="urdf_path" 
         value="$(find-pkg-share abb_mujoco_description)/urdf/abb_description.urdf.xacro" />

    <!-- <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
    </node> -->

    <node pkg="controller_manager" exec="ros2_control_node">
        <param from="$(find-pkg-share abb_mujoco_bringup)/config/abb_controllers.yaml"/>
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <node pkg="controller_manager" exec="spawner" args="forward_command_controller"
          name="spawner_forward_command_controller"
          output="screen">
        <param name="controller_manager_timeout" value="10"/>
    </node>

</launch>