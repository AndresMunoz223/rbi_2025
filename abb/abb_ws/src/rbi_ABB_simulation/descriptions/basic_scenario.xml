<mujoco>
  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3"
     rgb2=".2 .3 .4" width="300" height="300" mark="none"/>
    <material name="grid" texture="grid" texrepeat="1 1"
     texuniform="true" reflectance=".1"/>
  </asset>

  <visual>
    <scale framelength="0.2" framewidth="0.02"/>
  </visual>

  <default>
  <joint armature="0.01" damping="100."/> 
  </default>

  <worldbody>

    <light name="light" pos="0 0 4"/>
    <geom name="floor" type="plane" pos="0 0 0" size="30 30 .01" material="grid" friction=".001"/>
    <camera name="fixed" pos="0 -1.5 2." euler="45 0 0"/>

    <!--  Abb base-->
    <body name="abb_base" pos="0 0 0.05" euler = "0 0 -60">
        <geom name="abb_base_geom" type="box" size="0.3 0.3 0.05" rgba="1 0 0 1"/>

        <!-- first Joint -->
        <body name="first_joint_body" pos="0 0 0.342">
            <geom name="first_joint_geom" type="cylinder" size="0.3 0.04" rgba="0 0 1 1" pos="0 0 -0.245"/>
            <geom name="back_side_ABB" type="box" size="0.1 0.3 0.1" rgba="1 0 0 1" pos="-0.245 0 0"/>
            <geom name="left_side_ABB" type="box" size="0.2 0.05 0.1" rgba="1 0 0 1" pos="0 0.25 0"/>

            <joint name="first_joint" type="hinge"/>

            <!-- Segundo Joint -->
            <body name="second_joint_body" pos="0.06988 0 0" euler = "90 0 90">
                <geom name="second_joint_geom" type="cylinder" size="0.1 0.2" rgba="0 0 1 1" pos="0 0 0"/>
                <geom name="right_side_ABB" type="box" size="0.3 0.1 0.05" rgba="1 0 0 1" pos="0.2 0 0.25"/>

                <joint name="second_joint" type="hinge"/>

                <!-- Third Joint -->
                <body name="third_joint_body" pos="0.362 0 0" euler = "0 0 180">
                    <geom name="third_joint_geom" type="cylinder" size="0.1 0.2" rgba="0 0 1 1" pos="0 0 0"/>
                    <joint name="third_joint" type="hinge"/>

                    <!-- Fourth Joint -->
                    <body name="fourth_joint_body" pos="0 0.380 0" euler = "-90 0 180">
                        <geom name="fourth_joint_geom" type="cylinder" size="0.08 0.1" rgba="0 0 1 1" pos="0 0 -0.155"/>
                        <joint name="fourth_joint" type="hinge"/>
                        
                        <!-- Fifth Joint -->
                        <body name="fifth_joint_body" pos="0 0 0" euler = "-90 0 180">
                            <geom name="fifth_joint_geom" type="cylinder" size="0.05 0.1" rgba="0 0 1 1" pos="0 0 0"/>
                            <joint name="fifth_joint" type="hinge"/>

                            <!-- Sixth Joint -->
                            <body name="sixth_joint_body" pos="0 0.065 0" euler = "-90 0 180">
                                <geom name="sixth_joint_geom" type="cylinder" size="0.02 0.05" rgba="0 0 1 1" pos="0 0 0.05"/>
                                <joint name="sixth_joint" type="hinge"/>
                            </body>
                        </body>
                    </body>
                </body>
            </body>
        </body>
    </body>

  </worldbody>

    <actuator>
        <position name="J_1" joint="first_joint" kp="500" />
        <position name="J_2" joint="second_joint" kp="500"/>
        <position name="J_3" joint="third_joint" kp="5000" />
        <position name="J_4" joint="fourth_joint" kp="500"/>
        <position name="J_5" joint="fifth_joint" kp="500" />
        <position name="J_6" joint="sixth_joint" kp="500" />

        <!-- <motor name="first_motor" joint="first_joint" gear="100"/>
        <motor name="second_motor" joint="second_joint" gear="100" />
        <motor name="third_motor" joint="third_joint" gear="100" />
        <motor name="fourth_motor" joint="fourth_joint" gear="100" />
        <motor name="fifth_motor" joint="fifth_joint" gear="100" />
        <motor name="sixth_motor" joint="sixth_joint" gear="100" /> -->
    </actuator>

</mujoco>